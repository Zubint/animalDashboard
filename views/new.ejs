<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Animal Dash - Add a new Animal</title>
    <link rel="stylesheet" href="/css/style.css">
    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/2.2.2/jquery.min.js"></script>
    <script>
      $(document).ready(function (){

          $('button').click(function(){
            $('#errors').html("");

          })

      })
    </script>
  </head>
  <body>
    <div class="container">
      <div class="wrapper">
            <div>
                <h1> Adding a new Animal</h1>
            </div>
            <div>
              <form action="/animal" method="post">
                 <!--restful call for adding an animal = app.post("/animal")  -->
                 <p>Name: <input type="text" name="name" id="name"></p>
                 <p>Type: <input type="text" name="type" id="type"></p>
                 <p>Description: <input type="text" name="description" id="description"></p>
                 <button type="submit">Add this animal to the pack!</button>
              </form>
              <% if(errorsArray !=null){console.log('boo!')} %>
              <ul id="errors">
              <% for (idx=0; idx<errorsArray.length; idx++){ %>
                <li class="error"> <%= errorsArray[idx] %> </li>
              <% } %>
            </ul>
          </div>
          <a href="/">Back</a>
        </div>
      </div>
  </body>
</html>
